<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ECMOCalc" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.ECMOCalc" parent="Base.Theme.ECMOCalc" />

    <style name="AppTheme.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/blue</item>
    </style>

    <style name="LightBlueButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="BlueButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:background">@drawable/blue_button_bg</item>
    </style>

    <style name="BlueButtonText" >
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.EditText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:textColor">@color/grey1</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">22dp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="DataText">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SubTitle">
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="SubTitleGrey">
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Result">
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

</resources>